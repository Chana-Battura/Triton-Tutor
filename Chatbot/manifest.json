{
    "manifest_version": 3,
    "name": "Triton Tutor",
    "version": "1.0",
    "description": "Ask questions to a chatbot",
    "permissions": ["activeTab", "tabs", "scripting"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"]
        }
      ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  