{
    "manifest_version": 3,
    "name": "ChatBot Extension",
    "version": "1.0",
    "description": "Ask questions to a chatbot",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  